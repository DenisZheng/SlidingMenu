<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/menu_left_list_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="10"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/times_icon"
                android:layout_width="143dp"
                android:layout_height="143dp"
                android:layout_gravity="center"
                android:contentDescription="@string/logo"
                android:gravity="center"
                android:src="@drawable/enter_page_incloud_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/usr_txt"
                    android:layout_width="255.0dip"
                    android:layout_height="40.0dip"
                    android:background="@drawable/edit_text_bg"
                    android:drawableLeft="@drawable/tool_box_friend_icon"
                    android:drawablePadding="5.0dip"
                    android:hint="请输入手机号"
                     android:numeric="integer"
                    android:imeOptions="actionDone"
                    android:padding="10.0dip"
                    android:paddingRight="10.0dip"
                    android:singleLine="true"
                    android:textColor="#ffffffff"
                    android:textColorHint="#ffa9a9a9"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/pwd_txt"
                    android:layout_width="255.0dip"
                    android:layout_height="40.0dip"
                    android:background="@drawable/edit_text_bg"
                    android:drawableLeft="@drawable/icon_password"
                    android:drawablePadding="5.0dip"
                    android:hint="请输入密码"
                    android:imeOptions="actionDone"
                    android:padding="10.0dip"
                    android:paddingRight="10.0dip"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:textColor="#ffffffff"
                    android:textColorHint="#ffa9a9a9"
                    android:textSize="16.0sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left" >

                <CheckBox
                    android:id="@+id/checkpd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/check_selector"
                    android:button="@null"
                    android:checked="true" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记住密码"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffffff"
                    android:textColorHint="#ffa9a9a9"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right" >

                <CheckBox
                    android:id="@+id/autologin"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/check_selector"
                    android:button="@null"
                    android:checked="true"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自动登录"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffffff"
                    android:textColorHint="#ffa9a9a9"
                    android:textSize="16.0sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="5dp"
                android:background="@drawable/lbtn"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="21sp" />
            <Button
                android:id="@+id/goRegBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="5dp"
                android:background="@drawable/lbtn"
                android:text="注册"
                android:textColor="@color/white"
                android:textSize="21sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>