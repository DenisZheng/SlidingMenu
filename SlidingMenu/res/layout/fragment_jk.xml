<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_box_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="2"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/times_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/jkstbg" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_weight="1"
        android:background="@drawable/monitoring_page_bottom_bg"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/playbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" >

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/play_button"
                android:src="@drawable/play_button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/screenbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/monitoring_page_bottom_bg_press"
            android:gravity="center_vertical|center_horizontal" >

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:background="@drawable/screenshot_button"
                android:src="@drawable/screenshot_button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vediobtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" >

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/video_button"
                android:src="@drawable/video_button" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>