<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alb"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
     android:background="@drawable/tool_box_fragment_bg_selector"
    android:orientation="vertical" >

 <LinearLayout
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_margin="5dp" >

     <ImageView
         android:id="@+id/times_icon"
         android:layout_width="45dp"
         android:layout_height="45dp"
         android:background="@drawable/general_dining_icon" />

    <TextView
        android:id="@+id/txtTimeName"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="4"
        android:gravity="left|center"
        android:height="50dp"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <ImageButton
        android:id="@+id/btnTimesSet"
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/clock_selector" />

 </LinearLayout>

</LinearLayout>